# Runtime
ENV=development
LOG_LEVEL=INFO

# Shared JWT (HS256 only, use same value across every service + gateway)
JWT_ISSUER=uem-identity
JWT_AUDIENCE=uem-api
JWT_SHARED_SECRET=replace-with-a-very-long-random-string-min-32-chars
JWT_ALGORITHM=HS256

# Shared HMAC for agent <-> backend request signing
HMAC_SHARED_SECRET=replace-with-a-very-long-random-string-min-32-chars

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=uem
POSTGRES_USER=uem_user
POSTGRES_PASSWORD=change-me

# Redis / RabbitMQ
REDIS_URL=redis://redis:6379/0
RABBITMQ_USER=uem
RABBITMQ_PASSWORD=uem
RABBITMQ_URL=amqp://uem:uem@rabbitmq:5672/

# Service ports
AUTH_SERVICE_PORT=8001
DEVICE_SERVICE_PORT=8002
TASK_SERVICE_PORT=8003
GATEWAY_PORT=8080

# Agent config
UEM_AUTH_URL=http://auth-service:8001/v1/auth/login
UEM_DEVICE_URL=http://device-service:8002/v1/devices
UEM_AGENT_EMAIL=agent@acme.local
UEM_AGENT_PASSWORD=agent-password
UEM_HMAC_SECRET=replace-with-a-very-long-random-string-min-32-chars
