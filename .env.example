# Global
ENV=development
LOG_LEVEL=INFO
JWT_ISSUER=uem-identity
JWT_AUDIENCE=uem-api
JWT_PRIVATE_KEY_PATH=/run/secrets/jwt_private.pem
JWT_PUBLIC_KEY_PATH=/run/secrets/jwt_public.pem

# Database / Multi-tenant
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=uem
POSTGRES_USER=uem_user
POSTGRES_PASSWORD=change-me
TENANT_STRATEGY=column
TENANT_DEFAULT_PLAN=enterprise

# Cache / Queue
REDIS_URL=redis://redis:6379/0
RABBITMQ_URL=amqp://uem:uem@rabbitmq:5672/

# Security
HMAC_SHARED_SECRET=replace-with-long-random-secret
ENCRYPTION_KEY_BASE64=replace-with-32-byte-key
API_RATE_LIMIT=200/minute
MTLS_ENABLED=false

# Service Ports
AUTH_SERVICE_PORT=8001
DEVICE_SERVICE_PORT=8002
TASK_SERVICE_PORT=8003
PATCH_SERVICE_PORT=8004
REPORTING_SERVICE_PORT=8005
NOTIFICATION_SERVICE_PORT=8006
GATEWAY_PORT=8080

# Frontend
VITE_API_BASE_URL=http://35.174.136.32:8080
