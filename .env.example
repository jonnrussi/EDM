# Global
ENV=development
LOG_LEVEL=INFO

# Security
JWT_ISSUER=uem-identity
JWT_AUDIENCE=uem-api
JWT_SHARED_SECRET=dev-secret
HMAC_SHARED_SECRET=replace-with-long-random-secret

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=uem
POSTGRES_USER=uem_user
POSTGRES_PASSWORD=change-me
DATABASE_URL=postgresql+psycopg://uem_user:change-me@postgres:5432/uem

# Cache / Queue
REDIS_URL=redis://redis:6379/0
RABBITMQ_URL=amqp://uem:uem@rabbitmq:5672/
RABBITMQ_DEFAULT_USER=uem
RABBITMQ_DEFAULT_PASS=uem

# Service Ports
AUTH_SERVICE_PORT=8001
DEVICE_SERVICE_PORT=8002
TASK_SERVICE_PORT=8003
PATCH_SERVICE_PORT=8004
REPORTING_SERVICE_PORT=8005
NOTIFICATION_SERVICE_PORT=8006
GATEWAY_PORT=8080

# Frontend
VITE_API_BASE_URL=http://localhost:8080
