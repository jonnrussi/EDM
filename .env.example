# Global
ENV=development
LOG_LEVEL=INFO
JWT_ISSUER=uem-identity
JWT_AUDIENCE=uem-api
JWT_PRIVATE_KEY_PATH=/run/secrets/jwt_private.pem
JWT_PUBLIC_KEY_PATH=/run/secrets/jwt_public.pem

# Database / Multi-tenant
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=uem
POSTGRES_USER=uem_user
POSTGRES_PASSWORD=change-me
TENANT_STRATEGY=column
TENANT_DEFAULT_PLAN=enterprise

# Cache / Queue
REDIS_URL=redis://redis:6379/0
RABBITMQ_URL=amqp://uem:uem@rabbitmq:5672/

# Security
HMAC_SHARED_SECRET=replace-with-long-random-secret
ENCRYPTION_KEY_BASE64=replace-with-32-byte-key
API_RATE_LIMIT=200/minute
MTLS_ENABLED=false

# Service Ports
AUTH_SERVICE_PORT=8001
DEVICE_SERVICE_PORT=8002
TASK_SERVICE_PORT=8003
PATCH_SERVICE_PORT=8004
REPORTING_SERVICE_PORT=8005
NOTIFICATION_SERVICE_PORT=8006
GATEWAY_PORT=8080

# Frontend
VITE_API_BASE_URL=http://localhost:8080

# Agent
UEM_DEVICE_ID=device-local
UEM_DEVICE_URL=https://localhost:8002/v1/devices
UEM_TASK_URL=https://localhost:8003
UEM_CLIENT_CERT_PATH=/etc/uem-agent/device.crt
UEM_CLIENT_KEY_PATH=/etc/uem-agent/device.key
UEM_CA_CERT_PATH=/etc/uem-agent/ca.crt
UEM_ALLOWED_COMMANDS=echo,hostname,uname
UEM_POLL_INTERVAL_SEC=15

UEM_AUTH_URL=https://localhost:8001/v1/auth/login
UEM_ENROLLMENT_URL=https://localhost:8001/v1/agents/enroll
UEM_ENROLLMENT_TOKEN=enroll-dev-token
UEM_AGENT_EMAIL=agent@acme.local
UEM_AGENT_PASSWORD=change-me
UEM_DEVICE_ID_FILE=.uem_device_id
UEM_POLL_INTERVAL=15s
UEM_EXECUTION_TIMEOUT=60s
UEM_REQUEST_TIMEOUT=20s
UEM_RETRY_MAX_ATTEMPTS=3
UEM_RETRY_BASE_DELAY=500ms
UEM_RETRY_MAX_DELAY=8s
UEM_TOKEN_REFRESH_LEEWAY=60s
MTLS_DISABLED=false
